<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MatchPredictor</title>

    <meta name="description" content="Get accurate daily football predictions like BTTS, Over 2.5, Draws, and more. Powered by AI and updated daily.">
    <meta name="keywords" content="football predictions, btts, over 2.5, betting tips, match predictor, AI football tips">
    <meta name="author" content="MatchPredictor Team">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://match-predictor-qnpy.onrender.com/">
    <meta property="og:title" content="MatchPredictor – Daily AI Football Predictions">
    <meta property="og:description" content="Accurate daily football predictions using AI. Easy betslips. Simple design. Zero fluff.">
    <meta property="og:image" content="https://match-predictor-qnpy.onrender.com/preview.jpg">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="https://match-predictor-qnpy.onrender.com/">
    <meta name="twitter:title" content="MatchPredictor – AI-Powered Football Tips">
    <meta name="twitter:description" content="Daily tips like BTTS, Over 2.5, and more. Streamlined. Trustable.">
    <meta name="twitter:image" content="https://match-predictor-qnpy.onrender.com/preview.jpg">
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ET4NE2RTGC"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'G-ET4NE2RTGC');
    </script>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Football Prediction Website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.4.1/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/MatchPredictor.Web.styles.css" asp-append-version="true"/>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">

</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Football Prediction Website</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/predictions/btts">BTTS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/predictions/straightwin">StraightWin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/predictions/over2">Over2.5</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/predictions/draw">Draw</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/predictions/combined">Combined</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        <a class="nav-link text-dark inline-block bg-black text-white rounded-full shadow-md text-lg transition-all duration-300 transform hover:scale-105 hover:bg-gray-900"
           style="text-decoration: none;" href="/scrapestatus">Scrape Logs</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>