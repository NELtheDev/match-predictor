@page
@model MatchPredictor.Web.Pages.Predictions.Combined

@{
    ViewData["Title"] = "Combined Predictions";
    var today = DateTime.UtcNow.ToString("dd MMM yyyy");
}

<!DOCTYPE html>

<html>
<head>
    <title>⚽ Combined</title>
</head>
<body>
<div>
    <section class="min-h-screen bg-gradient-to-br from-green-50 via-white to-blue-50 py-10 px-4 sm:px-6 md:px-8 text-gray-800">
        <div class="max-w-3xl mx-auto">

            <div class="bg-emerald-700 text-black font-semibold px-6 py-3 rounded-xl shadow-lg mb-6 text-center tracking-wide">
                ✅ Combined Predictions for Today – @today
            </div>

            @if (Model.Matches.Any())
            {
                <div class="space-y-6">
                    @foreach (var match in Model.Matches)
                    {
                        <div class="bg-slate-50 border border-slate-200 rounded-lg p-4 shadow-sm hover:shadow-md transition">
                            <div class="text-sm text-gray-500 font-semibold uppercase mb-1">
                                <strong>@match.League – @match.Time</strong>
                            </div>
                            <div class="text-xl font-medium text-gray-800">
                                @match.HomeTeam
                                <span class="text-sm text-gray-500 font-normal">vs</span>
                                @match.AwayTeam – 
                                @match.PredictedOutcome
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-gray-600 italic text-center mt-6">No predictions available for today.</p>
            }
        </div>

        <!-- Scroll to top arrow -->
        <button onclick="scrollToTop()" class="fixed bottom-5 right-5 bg-black hover:bg-gray-800 text-white p-3 rounded-full shadow-lg transition-opacity duration-300 opacity-100" id="scrollTopBtn">
            ⬆️
        </button>
    </section>

    @section Scripts {
        <script>
            const scrollBtn = document.getElementById("scrollTopBtn");

            window.onscroll = function () {
                if (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) {
                    scrollBtn.style.opacity = 1;
                } else {
                    scrollBtn.style.opacity = 0;
                }
            };

            function scrollToTop() {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        </script>
    }
</div>
</body>
</html>