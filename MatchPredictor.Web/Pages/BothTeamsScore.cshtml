
@page
@model MatchPredictor.Web.Pages.BothTeamsScoreModel

<h1>Both Teams to Score (BTTS) Predictions</h1>

@foreach (var p in Model.Predictions)
{
    <div style="margin-bottom: 10px;">
        <strong>@p.HomeTeam vs @p.AwayTeam</strong> <br />
        Outcome: @p.PredictedOutcome <br />
        Confidence: @(p.ConfidenceScore?.ToString("P0") ?? "N/A")
    </div>
    <hr />
}
